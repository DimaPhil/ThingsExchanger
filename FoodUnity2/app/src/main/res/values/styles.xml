<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/button_text</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    
    <style name="TitleStyle" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/lightTextColor</item>
    </style>

    <style name="ActionBarStyle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
    </style>

</resources>
