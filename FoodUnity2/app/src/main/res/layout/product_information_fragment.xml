<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_information_card_view"
    android:layout_gravity="center"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    card_view:contentPadding="10dp" 
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Name of donation"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:id="@+id/product_information_name"
                />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/product_information_image"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/product_information_name"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="20dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Product Description"
                android:layout_below="@+id/product_information_name"
                android:id="@+id/product_information_description"
                android:layout_toRightOf="@+id/product_information_image"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Expiration date"
                android:id="@+id/product_information_date"
                android:inputType="date"
                android:layout_below="@+id/product_information_description"
                android:layout_toRightOf="@+id/product_information_image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/product_information_count"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Product Count"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/product_information_name"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/product_information_reserved"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Product Reserved"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/product_information_count"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>